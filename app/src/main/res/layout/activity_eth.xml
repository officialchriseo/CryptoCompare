<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ng.com.blogspot.httpofficialceo.cryptocompare.ETHActivity">


    <ListView
        android:id="@+id/eth_currency_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

   <ImageView
       android:id="@+id/eth_wifi"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:src="@drawable/wifi"
       android:layout_centerInParent="true"
       android:visibility="invisible"/>

    <Button
        android:id="@+id/eth_refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to refresh"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/eth_wifi"
        android:visibility="invisible"/>


</RelativeLayout>

